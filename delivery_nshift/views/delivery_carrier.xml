<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_delivery_carrier_form_nshift" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.nshift</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button
            string="Update nShift carriers"
            type="object"
            class="oe_highlight"
            name="action_nshift_get_carriers"
            attrs="{'invisible': [('delivery_type', '!=', 'nshift')]}"
          />
                </header>
            </xpath>

            <xpath expr="//page[@name='destination']" position="before">
                <page
          string="nShift Configuration"
          name="nshift_configuration"
          attrs="{'invisible': [('delivery_type', '!=', 'nshift')]}"
        >

                    <group name="user" string="User">
                        <field
              name="nshift_username"
              attrs="{'required': [('delivery_type', '=', 'nshift')]}"
            />
                        <field
              name="nshift_password"
              password="1"
              attrs="{'required': [('delivery_type', '=', 'nshift')]}"
            />
                    </group>

                    <group name="client" string="Client">
                        <field name="nshift_carrier_id" />
                        <field name="nshift_customer_id" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
