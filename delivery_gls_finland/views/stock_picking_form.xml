<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_picking_withcarrier_out_form" model="ir.ui.view">
        <field name="name">stock.picking.view.form.gls.finland.shipments</field>
        <field name="model">stock.picking</field>
        <field
      name="inherit_id"
      ref="delivery.view_picking_withcarrier_out_form"
    />
        <field name="arch" type="xml">
            <field name="origin" position="after">
                <field
          name="contents"
          attrs="{'invisible': [('carrier_id', '=', False)], 'readonly': [('state', '=', 'done')]}"
        />
                <field
          name="shipment_info"
          attrs="{'invisible': [('carrier_id', '=', False)], 'readonly': [('state', '=', 'done')]}"
        />
                <field
          name="parcels"
          attrs="{'invisible': [('carrier_id', '=', False)], 'readonly': [('state', '=', 'done')]}"
        />
                <field name="gls_finland_uuid" invisible="1" />
                <field
          name="gls_finland_service_ids"
          attrs="{'invisible': [('carrier_id', '=', False)], 'readonly': [('state', '=', 'done')]}"
          widget="many2many_tags"
        />
                <field
          name="gls_finland_tracking_codes"
          attrs="{'invisible': [('gls_finland_tracking_codes', '=', False)], 'readonly': [('state', '=', 'done')]}"
        />
            </field>
        </field>
    </record>
</odoo>
