<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_delivery_carrier_form_gls_finland" model="ir.ui.view">
        <field name="name">delivery.carrier.form.provider.gls.finland</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form" />
        <field name="arch" type="xml">

            <xpath expr="//page[@name='destination']" position="before">
                <page
          string="GLS Finland"
          name="gls_finland_configuration"
          attrs="{'invisible': [('delivery_type', '!=', 'gls_finland')]}"
        >

                    <group name="gls_finland">
                        <field
              name="gls_finland_product_code"
              attrs="{'required': [('delivery_type', '=', 'gls_finland')]}"
            />
                        <field name="gls_label_type" />
                        <field name="gls_finland_service_code" />
                        <field name="gls_finland_customer_number" />
                        <field name="gls_finland_api_key" password="1" />
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
